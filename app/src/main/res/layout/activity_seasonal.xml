<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="100">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Large Text"
            android:id="@+id/seasonalLocation"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_weight="10"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Start these inside:"
            android:id="@+id/starterTitle"
            android:layout_below="@+id/seasonalLocation"
            android:layout_alignRight="@+id/plantDirectlyTitle"
            android:layout_alignEnd="@+id/plantDirectlyTitle"
            android:layout_marginTop="36dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="10"/>

        <ListView
            android:layout_width="wrap_content"
            android:layout_height="184dp"
            android:id="@+id/starterListView"
            android:layout_below="@+id/starterTitle"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="35"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Plant these directly:"
            android:id="@+id/plantDirectlyTitle"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/starterListView"
            android:layout_gravity="center_horizontal"
            android:layout_weight="5"/>

        <ListView
            android:layout_width="wrap_content"
            android:layout_height="217dp"
            android:id="@+id/plantDirectlyListView"
            android:layout_below="@+id/plantDirectlyTitle"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="20dp"
            android:layout_weight="35" />
    </LinearLayout>




